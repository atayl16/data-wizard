<a class="btn btn-outline-primary" href="appointments/export_statuses.csv" role="button">Exports</a>

<table class="table table-striped table-bordered table-sm" cellspacing="0">
  <thead>
    <tr>
      <th>Appointment</th>
      <th>Status</th>
      <th>Change time</th>
      <th>Employee</th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.appointment_id %></td>
        <td><%= appointment.status %></td>
        <td><%= appointment.change_time %></td>
        <td><%= appointment.employee_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @appointments, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

<a class="btn btn-danger" href="tickets/export_payments.csv" role="button">Export</a>

<table class="table table-striped table-bordered table-sm" cellspacing="0">
  <thead>
    <tr>
      <th>Ticket</th>
      <th>Payment item</th>
      <th>Type</th>
      <th>Amount</th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.ticket_id %></td>
        <td><%= appointment.payment_item_id %></td>
        <td><%= appointment.ticket_type %></td>
        <td><%= appointment.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @appointments, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

<table class="table table-striped table-bordered table-sm" cellspacing="0">
  <thead>
    <tr>
      <th>class_id</th>
      <th>category_id</th>
      <th>name</th>
      <th>description</th>
      <th>instructions</th>
      <th>what_to_bring</th>
      <th>hide_prices</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.class_id %></td>
        <td><%= event.category_id %></td>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.instructions %></td>
        <td><%= event.what_to_bring %></td>
        <td><%= event.hide_prices %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<em>*Some fields excluded from table for brevity</em>
<br>
<%= will_paginate @events, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

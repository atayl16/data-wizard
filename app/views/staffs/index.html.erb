<h1 id="title">Staff</h1>

<a class="btn btn-primary" href="staffs.csv" role="button">Export</a>

<table class="table table-striped table-bordered table-sm" cellspacing="0">
  <thead>
    <tr>
      <th>Employee</th>
      <th>Name</th>
      <th>Title</th>
      <th>Email</th>
      <th>Location</th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.employee_id %></td>
        <td><%= staff.name %></td>
        <td><%= staff.title %></td>
        <td><%= staff.email %></td>
        <td><%= staff.location_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<a class="btn btn-danger" href="/tickets/export.csv" role="button">Export Tickets</a>
<a class="btn btn-danger" href="/tickets/export_skus.csv" role="button">Export SKUs</a>
<a class="btn btn-danger" href="/tickets/export_services.csv" role="button">Export Services</a>
<a class="btn btn-danger" href="/tickets/export_payments.csv" role="button">Export Payments</a>

<table class="table table-striped table-bordered table-sm" cellspacing="0">
  <thead>
    <tr>
      <th>Ticket</th>
      <th>Client</th>
      <th>Status</th>
      <th>Employee</th>
      <th>Type</th>
      <th>Inventory sku</th>
      <th>Quantity</th>
      <th>Appointment</th>
      <th>Amount</th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.ticket_id %></td>
        <td><%= ticket.location_id %></td>
        <td><%= ticket.status %></td>
        <td><%= ticket.employee_id %></td>
        <td><%= ticket.payment_type %></td>
        <td><%= ticket.inventory_sku_id %></td>
        <td><%= ticket.quantity %></td>
        <td><%= ticket.appointment_id %></td>
        <td><%= ticket.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<em>*Some fields excluded from table for brevity</em>
<br>

<%= will_paginate @tickets, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

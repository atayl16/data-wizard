<a class="btn btn-danger" href="tickets/export.csv" role="button">Export Tickets</a>

<table class="table table-striped table-bordered table-sm" cellspacing="0">
  <thead>
    <tr>
      <th>Ticket</th>
      <th>Location</th>
      <th>Client</th>
      <th>Status</th>
      <th>Employee</th>
      <th>Closed by employee</th>
      <th>Closed at</th>
      <th>Deleted</th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.ticket_id %></td>
        <td><%= ticket.location_id %></td>
        <td><%= ticket.client_id %></td>
        <td><%= ticket.status %></td>
        <td><%= ticket.employee_id %></td>
        <td><%= ticket.closed_by_employee_id %></td>
        <td><%= ticket.closed_at %></td>
        <td><%= ticket.deleted %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @tickets, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

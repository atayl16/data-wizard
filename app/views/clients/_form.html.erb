
  <%= bootstrap_form_for(@client) do |f| %>
    <%= f.text_field :client_id %>
    <%= f.text_field :client_first_name %>
    <%= f.text_field :client_last_name %>
    <%= f.text_field :email %>
    <%= f.text_field :mobile_phone %>
    <%= f.text_field :work_phone %>
    <%= f.text_field :home_phone %>
    <%= f.text_field :street_address %>
    <%= f.text_field :street_address_2 %>
    <%= f.text_field :city %>
    <%= f.text_field :state %>
    <%= f.text_field :zip %>
    <%= f.text_field :country %>
    <%= f.text_field :gender %>
    <%= f.text_field :date_of_birth %>
    <%= f.check_box :can_receive_automated_emails %>
    <%= f.check_box :can_receive_manual_emails %>
    <%= f.check_box :can_receive_automated_sms %>
    <%= f.check_box :can_receive_manual_sms %>
    <%= f.text_field :client_since %>
    <%= f.text_field :notes %>
    <%= f.text_field :preferred_employee_id %>
    <%= f.text_field :preferred_location_id %>
    <%= f.check_box :deleted %>

    <%= f.submit "Save" %>

<% end %>
